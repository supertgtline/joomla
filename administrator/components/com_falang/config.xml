<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="basic"
		label="COM_FALANG_CONFIG_BASIC_LABEL"
		description="COM_FALANG_CONFIG_BASIC_DESC">

        <field name="overwriteGlobalConfig" type="radio" default="1" label="Overwrite global config values" description="COM_FALANG_CONGIG_OVERWRITE_GLOBAL_CONFIG_HELP">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</field>

		<field name="spacer" type="spacer" label="COM_FALANG_CONGIG_MANAGE_TRANSLATION" />

		<field name="storageOfOriginal" type="list" default="md5" label="Store original version as" description="COM_FALANG_CONGIG_MANAGE_TRANSLATION_ORIGINAL_HELP">
			<option value="md5">MD5 key only</option>
			<option value="both">MD5 key and clear text</option>
		</field>

		<field name="showDefaultLanguageAdmin" type="radio" default="0" label="COM_FALANG_CONFIG_ADM_DEFAULT_LANG_LABEL" description="COM_FALANG_CONFIG_ADM_DEFAULT_LANG_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</field>

		<field name="spacer2" type="spacer" label="COM_FALANG_CONFIG_ADV_USER"  />

		<field name="copyparams" type="radio" default="1" label="Copy original params to empty translation" description="COM_FALANG_CONFIG_COPYPARAMS_HELP">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</field>

    </fieldset>
        <fieldset name="debug"
		label="COM_FALANG_CONFIG_DEBUG_LABEL"
		description="COM_FALANG_CONFIG_DEBUG_DESC">


         <field name="qacaching" type="radio" default="1" label="Enable query analysis caching" description="COM_FALANG_CONFIG_QA_CACHING_HELP">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</field>

		<field name="qalogging" type="radio" default="0" label="Enable query analysis logging" description="COM_FALANG_CONFIG_QA_LOGGING_HELP">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</field>
	</fieldset>
    <fieldset
        name="permissions"
        label="JCONFIG_PERMISSIONS_LABEL"
        description="JCONFIG_PERMISSIONS_DESC"
        >

        <field
            name="rules"
            type="rules"
            label="JCONFIG_PERMISSIONS_LABEL"
            class="inputbox"
            filter="rules"
            validate="rules"
            component="com_falang"
            section="component" />
    </fieldset>
</config>