	</t3>
	<description>
		<![CDATA[
		<div align="center">
			<div class="alert alert-success" style="background-color:#DFF0D8;border-color:#D6E9C6;color: #468847;padding: 1px 0;">
				<h3>You have installed Industrix successfully.</h3>
				<p>Copyright 2004 - 2014 <a href='http://www.themehippo.com/' title='Visit themehippo.com!'>themehippo.com</a>.</p>
			</div>
			<style>table.adminform{width: 100%;}</style>
		</div>
		]]>
	</description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>thememagic.xml</filename>
		<filename>templateInfo.php</filename>
		<filename>templateHook.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
		<filename>helper.php</filename>
		<filename>offline.php</filename>
		<filename>error.php</filename>
		<folder>admin</folder>
		<folder>etc</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>less</folder>
		<folder>language</folder>
		<folder>images</folder>
		<folder>tpls</folder>
		<folder>roksprocket</folder>
		<folder>hippo-shortcodes</folder>
		<folder>local</folder>
	</files>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_industrix.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_industrix.sys.ini</language>
	</languages>

	<positions>
		<position>languageswitcherload</position>
		<position>social-icon</position>
		<position>th-login</position>
		<position>head-search</position>
		<position>mainnav</position>
		<position>showcase-left</position>
		<position>showcase-right</position>
		<position>top-feature</position>
		<position>navhelper</position>
		<position>breadcrumbs</position>
		<position>off-canvas</position>
		<position>sidebar-1</position>
		<position>sidebar-2</position>
		<position>mast-col</position>
		<position>client</position>
		<position>footer</position>
		<position>features-intro-1</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
